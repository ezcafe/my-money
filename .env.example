# My Money - Environment Variables Example
# Copy this file to .env and fill in your actual values
# Note: .env files are gitignored and should never be committed

# =============================================================================
# Node Environment
# =============================================================================
# Environment mode: 'development' or 'production'
NODE_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# For Docker: postgresql://postgres:postgres@postgres:5432/mymoney
# For local: postgresql://postgres:postgres@localhost:5432/mymoney
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mymoney

# PostgreSQL credentials (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mymoney

# =============================================================================
# Server Configuration
# =============================================================================
# Backend GraphQL server port
PORT=4000

# Allowed origins for CORS/CSRF protection (comma-separated)
# Required in production for mutation security
# Example: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# OIDC Authentication (Backend)
# =============================================================================
# OIDC discovery URL (Pocket ID or other OIDC provider)
# Example: http://localhost:8080/.well-known/openid-configuration
OPENID_DISCOVERY_URL=http://localhost:8080/.well-known/openid-configuration

# OIDC client ID
OPENID_CLIENT_ID=your-client-id

# OIDC client secret
OPENID_CLIENT_SECRET=your-client-secret

# =============================================================================
# Frontend Configuration
# =============================================================================
# GraphQL API endpoint URL
# For Docker: http://localhost:4000/graphql
# For production: https://yourdomain.com/graphql
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql

# OIDC discovery URL (for frontend token refresh)
# Should match OPENID_DISCOVERY_URL
REACT_APP_OPENID_DISCOVERY_URL=http://localhost:8080/.well-known/openid-configuration

# OIDC client ID (for frontend)
# Should match OPENID_CLIENT_ID
REACT_APP_OPENID_CLIENT_ID=your-client-id
